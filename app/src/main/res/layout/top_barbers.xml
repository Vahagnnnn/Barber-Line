<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/paragonLayout"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginEnd="13dp"
    android:background="@drawable/radius_16_dp"
    android:orientation="vertical">


    <FrameLayout
        android:id="@+id/container_vertical_card5"
        android:layout_width="165dp"
        android:paddingBottom="7dp"
        android:layout_height="wrap_content"
        android:background="@drawable/frame_top_barbers">

        <ImageView
            android:id="@+id/barber_image"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="5dp"
            android:clipToOutline="true"
            android:background="@drawable/radius100"
            android:contentDescription="@string/app_name"
            android:scaleType="centerInside"
            android:src="@drawable/img_barber"/>

        <TextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="21dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="128dp"
            android:fontFamily="@font/poppins"
            android:gravity="center"
            android:includeFontPadding="false"
            android:maxLines="1"
            android:singleLine="true"
            android:text="@string/sargis"
            android:textColor="#FF000000"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/phone"
            android:layout_width="wrap_content"
            android:layout_height="21dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="149dp"
            android:fontFamily="@font/poppins"
            android:gravity="center"
            android:includeFontPadding="false"
            android:maxLines="1"
            android:singleLine="true"
            android:text="@string/_077_77_77_77"
            android:textColor="#FF000000"
            android:textSize="16sp" />
    </FrameLayout>
</LinearLayout>