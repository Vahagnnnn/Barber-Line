<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#242C3B"
    tools:context=".MainActivity">


    <!-- Top Section -->
    <LinearLayout
        android:id="@+id/top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="10dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/Barber_Line_Text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:fontFamily="@font/poppins_bold"
            android:text="@string/Barber_Line"
            android:textColor="@color/white"
            android:textSize="24sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Space
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1" />

        <ImageButton
            android:id="@+id/profile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:backgroundTint="#00FFFFFF"
            android:contentDescription="@string/app_name"
            android:src="@drawable/profile" />
    </LinearLayout>

    <!-- Search Bar Section -->
    <FrameLayout
        android:id="@+id/search_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="10dp"
        android:layout_marginTop="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/top">

        <EditText
            android:id="@+id/search_input"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:autofillHints="Search Barbershop"
            android:background="@drawable/radius_10_dp"
            android:hint="@string/names_of_barbershops"
            android:inputType="text"
            android:padding="12dp"
            android:textColor="#FFFFFF"
            android:textColorHint="#A0A4AC"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <!-- Align the Button to the Right -->


        <ImageButton
            android:id="@+id/search_button"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:layout_gravity="end"
            android:background="@drawable/top_radius_16_dp"
            android:contentDescription="@string/app_name"
            android:scaleType="centerCrop"
            android:src="@drawable/search_button"
            app:layout_constraintEnd_toEndOf="parent"
            tools:srcCompat="@drawable/search_button" />


    </FrameLayout>

    <!-- Top Barber Shops Section -->
    <LinearLayout
        android:id="@+id/top_barber_shops"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="10dp"
        android:layout_marginTop="30dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/search_bar">

        <TextView
            android:id="@+id/textTopBarberShops"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/top_barber_shops"
            android:textColor="@color/white"
            android:textSize="14sp" />

        <Space
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1" />

        <TextView
            android:id="@+id/textSeeMore"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/see_more"
            android:textColor="@color/light_blue"
            android:textSize="12sp" />
    </LinearLayout>


    <!-- Paragon Section -->
    <LinearLayout
        android:id="@+id/paragonLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="start"
        android:layout_marginHorizontal="10dp"
        android:layout_marginTop="15dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/top_barber_shops">


        <ImageView
            android:id="@+id/paragon"
            android:layout_width="260dp"
            android:layout_height="160dp"
            android:background="@drawable/top_radius_16_dp"
            android:contentDescription="@string/app_name"
            android:scaleType="centerCrop"
            android:src="@drawable/paragon"
            tools:srcCompat="@drawable/paragon" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bottom_radius_16_dp"
            android:backgroundTint="@color/gray"
            android:orientation="vertical"
            android:paddingLeft="10dp"
            android:paddingBottom="7dp">

            <TextView
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/paragon"
                android:textColor="@android:color/black"
                android:textSize="14sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/_9_ghazar_parpetsi_st_8"
                android:textColor="@android:color/black"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/timings"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/open_from_08_30_to_23_30"
                android:textColor="@android:color/black"
                android:textSize="14sp" />
        </LinearLayout>
    </LinearLayout>


    <!-- Bottom Navigation -->
    <FrameLayout
        android:id="@+id/container_bottom"
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:layout_gravity="bottom"
        app:layout_constraintBottom_toBottomOf="parent">

        <!-- Home_Fill -->
        <FrameLayout
            android:id="@+id/container_home2"
            android:layout_width="49dp"
            android:layout_height="57dp"
            android:layout_gravity="start"
            android:layout_marginStart="20dp"
            android:layout_marginTop="14dp">

            <ImageView
                android:id="@+id/img_home_fill"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginStart="7dp"
                android:contentDescription="@string/app_name"
                android:scaleType="centerInside"
                android:src="@drawable/img_home_fill" />

            <TextView
                android:id="@+id/txt_home"
                android:layout_width="match_parent"
                android:layout_height="24dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="33dp"
                android:gravity="start"
                android:includeFontPadding="false"
                android:maxLines="1"
                android:singleLine="true"
                android:text="@string/home"
                android:textColor="#FFFFFFFF"
                android:textSize="16sp" />
        </FrameLayout>

        <!-- Book -->
        <FrameLayout
            android:id="@+id/container_book"
            android:layout_width="41dp"
            android:layout_height="57dp"
            android:layout_marginStart="90dp"
            android:layout_marginTop="14dp">

            <ImageView
                android:id="@+id/img_event"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="top"
                android:layout_marginStart="5dp"
                android:contentDescription="@string/app_name"
                android:scaleType="centerInside"
                android:src="@drawable/img_book" />

            <TextView
                android:id="@+id/txt_book"
                android:layout_width="match_parent"
                android:layout_height="24dp"
                android:layout_marginTop="33dp"
                android:gravity="start"
                android:includeFontPadding="false"
                android:maxLines="1"
                android:singleLine="true"
                android:text="@string/book"
                android:textColor="#FFFFFFFF"
                android:textSize="16sp" />
        </FrameLayout>

        <!-- Hairstyle -->
        <ImageView
            android:id="@+id/img_hairstyle"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_gravity="bottom|center"
            android:contentDescription="@string/app_name"
            android:scaleType="centerInside"
            android:src="@drawable/img_hairstyle" />

        <!-- Location -->
        <FrameLayout
            android:id="@+id/container_barber"
            android:layout_width="65dp"
            android:layout_height="59dp"
            android:layout_gravity="bottom|right"
            android:layout_marginEnd="75dp"
            tools:ignore="RtlHardcoded">

            <ImageView
                android:id="@+id/img_location"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="center_vertical|left"
                android:layout_marginLeft="13dp"
                android:layout_marginBottom="14.5dp"
                android:contentDescription="@string/app_name"
                android:scaleType="centerInside"
                android:src="@drawable/img_location" />

            <TextView
                android:id="@+id/txt_barbers"
                android:layout_width="match_parent"
                android:layout_height="24dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="35dp"
                android:gravity="left|center_vertical"
                android:includeFontPadding="false"
                android:maxLines="1"
                android:singleLine="true"
                android:text="@string/barbers"
                android:textColor="#FFFFFFFF"
                android:textSize="16sp" />
        </FrameLayout>

        <!-- Ssetting -->
        <FrameLayout
            android:id="@+id/container_settings"
            android:layout_width="68dp"
            android:layout_height="59dp"
            android:layout_gravity="end"
            android:layout_marginTop="14dp">

            <ImageView
                android:id="@+id/img_setting"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="19dp"
                android:layout_marginRight="19dp"
                android:layout_marginBottom="14.5dp"
                android:contentDescription="@string/app_name"
                android:scaleType="centerInside"
                android:src="@drawable/img_setting" />

            <TextView
                android:id="@+id/txt_settings"
                android:layout_width="match_parent"
                android:layout_height="24dp"
                android:layout_marginTop="35dp"
                android:gravity="left|center_vertical"
                android:includeFontPadding="false"
                android:maxLines="1"
                android:singleLine="true"
                android:text="@string/settings"
                android:textColor="#FFFFFFFF"
                android:textSize="16sp" />
        </FrameLayout>
    </FrameLayout>

</androidx.constraintlayout.widget.ConstraintLayout>

