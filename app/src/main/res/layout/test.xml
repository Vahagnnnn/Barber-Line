            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Հունիս 2025"
            android:textSize="18sp"
            android:textColor="#000000"
            android:gravity="end"/>
    </LinearLayout>

    <!-- Days of the Week -->
