<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/paragonLayout"
    android:layout_width="360dp"
    android:layout_height="230dp"
    android:layout_marginEnd="13dp"
    android:background="@drawable/radius_16_dp"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/container_frame"
        android:layout_width="match_parent"
        android:layout_height="230dp"
        android:background="@drawable/gray_frame"
        android:gravity="left|center_vertical"
        android:orientation="vertical"
        android:paddingLeft="16dp"
        android:paddingTop="20dp"
        android:paddingRight="16dp"
        android:paddingBottom="20dp"
        tools:ignore="RtlHardcoded">

        <LinearLayout
            android:id="@+id/BarberShopInfo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            tools:layout_editor_absoluteX="-15dp">

            <androidx.cardview.widget.CardView
                android:layout_width="50dp"
                android:layout_height="47dp"
                app:cardCornerRadius="10dp"
                app:cardElevation="0dp">

                <ImageView
                    android:id="@+id/BarberShopImage"
                    android:layout_width="50dp"
                    android:layout_height="47dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/img_paragon" />
            </androidx.cardview.widget.CardView>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="10dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/BarberShopName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Paragon"
                    android:textColor="#FF0D1B34"
                    android:textSize="16sp"
                    android:textStyle="bold" />


                <TextView
                    android:id="@+id/BarberShopAddress"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="9 Ghazar Parpetsi St, 8"
                    android:textColor="@color/black"
                    android:textSize="16sp" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/container_frame1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/BarberImage"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/radius100"
                android:clipToOutline="true"
                android:scaleType="centerInside"
                android:src="@drawable/img_sargis_paragon" />

            <FrameLayout
                android:id="@+id/container_frame4"
                android:layout_width="220dp"
                android:layout_height="53dp"
                android:layout_marginStart="10dp">

                <TextView
                    android:id="@+id/BarberName"
                    android:layout_width="wrap_content"
                    android:layout_height="24dp"
                    android:gravity="left|center_vertical"
                    android:includeFontPadding="false"
                    android:maxLines="1"
                    android:singleLine="true"
                    android:text="@string/sargis"
                    android:textColor="#FF0D1B34"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/ServiceName"
                    android:layout_width="match_parent"
                    android:layout_height="21dp"
                    android:layout_marginTop="24dp"
                    android:gravity="left|center_vertical"
                    android:includeFontPadding="false"
                    android:maxLines="1"
                    android:singleLine="true"
                    android:text="Haircut"
                    android:textColor="#FF000000"
                    android:textSize="14sp" />
            </FrameLayout>
        </LinearLayout>

        <ImageView
            android:id="@+id/img_vector"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="20dp"
            android:contentDescription="@string/app_name"
            android:scaleType="centerCrop"
            android:src="@drawable/img_vector" />

        <LinearLayout
            android:id="@+id/container_frame8"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:gravity="center_vertical"
            android:clipToPadding="false"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:clipToPadding="false"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/img_calendar"
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:contentDescription="@string/app_name"
                    android:scaleType="centerInside"
                    android:src="@drawable/ic_calendar" />

                <TextView
                    android:id="@+id/weekDay_monthName_dayOfMonth"
                    android:layout_width="wrap_content"
                    android:layout_height="18dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="8dp"
                    android:gravity="center"
                    android:includeFontPadding="false"
                    android:maxLines="1"
                    android:singleLine="true"
                    android:text="Thursday 3 April"
                    android:textColor="#FF000000"
                    android:textSize="12sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:clipToPadding="false"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/img_clock"
                    android:layout_width="14dp"
                    android:layout_height="16dp"
                    android:contentDescription="@string/app_name"
                    android:scaleType="centerInside"
                    android:src="@drawable/ic_clock" />

                <TextView
                    android:id="@+id/Time"
                    android:layout_width="wrap_content"
                    android:layout_height="18dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="8dp"
                    android:gravity="center"
                    android:includeFontPadding="false"
                    android:maxLines="1"
                    android:singleLine="true"
                    android:text="10:30"
                    android:textColor="#FF000000"
                    android:textSize="12sp" />

            </LinearLayout>

        </LinearLayout>

