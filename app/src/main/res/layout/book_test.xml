<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/paragonLayout"
    android:layout_width="360dp"
    android:layout_height="230dp"
    android:layout_marginEnd="13dp"
    android:background="@drawable/radius_16_dp"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/container_frame"
        android:layout_width="match_parent"
        android:layout_height="230dp"
        android:background="@drawable/gray_frame"
        android:gravity="left|center_vertical"
        android:orientation="vertical"
        android:paddingLeft="16dp"
        android:paddingTop="20dp"
        android:paddingRight="16dp"
        android:paddingBottom="20dp"
        tools:ignore="RtlHardcoded">

        <LinearLayout
            android:id="@+id/container_frame1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <androidx.cardview.widget.CardView
                app:cardCornerRadius="10dp"
                app:cardElevation="0dp"
                android:layout_width="50dp"
                android:layout_height="47dp">

                <ImageView
                    android:id="@+id/BarberShopImage"
                    android:layout_width="50dp"
                    android:layout_height="47dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/img_paragon" />
            </androidx.cardview.widget.CardView>

            <FrameLayout
                android:id="@+id/container_frame4"
                android:layout_width="220dp"
                android:layout_height="53dp"
                android:layout_marginStart="10dp">

                <TextView
                    android:id="@+id/txt_sargis"
                    android:layout_width="wrap_content"
                    android:layout_height="24dp"
                    android:gravity="left|center_vertical"
                    android:text="Paragon"
                    android:includeFontPadding="false"
                    android:maxLines="1"
                    android:singleLine="true"
                    android:textColor="#FF0D1B34"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/txt_address"
                    android:layout_width="match_parent"
                    android:layout_height="21dp"
                    android:layout_marginTop="24dp"
                    android:gravity="left|center_vertical"
                    android:includeFontPadding="false"
                    android:maxLines="1"
                    android:singleLine="true"
                    android:text="@string/_9_ghazar_parpetsi_st_8"
                    android:textColor="#FF000000"
                    android:textSize="14sp" />
            </FrameLayout>
        </LinearLayout>

        <ImageView
            android:id="@+id/img_vector"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="20dp"
            android:contentDescription="@string/app_name"
            android:scaleType="centerCrop"
            android:src="@drawable/img_vector" />

        <LinearLayout
            android:id="@+id/container_frame8"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:clipToPadding="false"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/img_calendar"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:contentDescription="@string/app_name"
                android:scaleType="centerInside"
                android:src="@drawable/ic_calendar" />

            <TextView
                android:id="@+id/txt_calendar_date"
                android:layout_width="wrap_content"
                android:layout_height="18dp"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="8dp"
                android:gravity="center"
                android:includeFontPadding="false"
                android:maxLines="1"
                android:singleLine="true"
                android:text="@string/thursday_3_april"
                android:textColor="#FF000000"
                android:textSize="12sp" />

            <View
                android:layout_width="0dp"
                android:layout_height="18dp"
                android:layout_weight="1" />

            <ImageView
                android:id="@+id/img_clock"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:layout_marginStart="12dp"
                android:contentDescription="@string/app_name"
                android:scaleType="centerInside"
                android:src="@drawable/ic_clock" />

            <TextView
                android:id="@+id/txt_time"
                android:layout_width="wrap_content"
                android:layout_height="18dp"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="8dp"
                android:gravity="center"
                android:includeFontPadding="false"
                android:maxLines="1"
                android:singleLine="true"
                android:text="11:00 - 12:00 AM"
                android:textColor="#FF000000"
                android:textSize="12sp" />

            <View
                android:layout_width="0dp"
                android:layout_height="18dp"
                android:layout_weight="1" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/container_frame15"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:background="@drawable/dark_blue_frame"
            android:clipToPadding="false"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingLeft="32dp"
            android:paddingTop="10.5dp"
            android:paddingRight="32dp"
            android:paddingBottom="10.5dp">

            <TextView
                android:id="@+id/txt_detail"
                android:layout_width="wrap_content"
                android:layout_height="18dp"
                android:gravity="center"
                android:includeFontPadding="false"
                android:maxLines="1"
                android:singleLine="true"
                android:text="Detail"
                android:textColor="#FFFFFFFF"
                android:textSize="14sp" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>